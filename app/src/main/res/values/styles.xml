<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="Theme.Customstyle" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">false</item>
        <item name="actionBarItemBackground">@drawable/selectable_background_customstyle</item>
        <item name="popupMenuStyle">@style/PopupMenu.Customstyle</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Customstyle</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Customstyle</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Customstyle</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Customstyle</item>
        <item name="actionModeBackground">@drawable/cab_background_top_customstyle</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_customstyle</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Customstyle</item>


    </style>

    <style name="ActionBar.Solid.Customstyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:windowNoTitle">false</item>
        <item name="background">@drawable/ab_solid_customstyle</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_customstyle</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_customstyle</item>
        <item name="progressBarStyle">@style/ProgressBar.Customstyle</item>
    </style>

    <style name="ActionBar.Transparent.Customstyle" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:windowNoTitle">false</item>
        <item name="background">@drawable/ab_transparent_customstyle</item>
        <item name="progressBarStyle">@style/ProgressBar.Customstyle</item>
    </style>

    <style name="PopupMenu.Customstyle" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:windowNoTitle">false</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_customstyle</item>
    </style>

    <style name="DropDownListView.Customstyle" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:windowNoTitle">false</item>
        <item name="android:listSelector">@drawable/selectable_background_customstyle</item>
    </style>

    <style name="ActionBarTabStyle.Customstyle" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:windowNoTitle">false</item>
        <item name="android:background">@drawable/tab_indicator_ab_customstyle</item>
    </style>

    <style name="DropDownNav.Customstyle" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:windowNoTitle">false</item>
        <item name="android:background">@drawable/spinner_background_ab_customstyle</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_customstyle</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_customstyle</item>
    </style>

    <style name="ProgressBar.Customstyle" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:windowNoTitle">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal_customstyle</item>
    </style>

    <style name="ActionButton.CloseMode.Customstyle" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:windowNoTitle">false</item>
        <item name="android:background">@drawable/btn_cab_done_customstyle</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Customstyle.Widget" parent="@style/Theme.AppCompat">
        <item name="android:windowNoTitle">false</item>
        <item name="popupMenuStyle">@style/PopupMenu.Customstyle</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Customstyle</item>
    </style>
</resources>
