<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.noveogroup.task3" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".RootActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SimpleActivity" />
        <activity android:name=".UpActivity" />
        <activity
            android:name=".SplitActivity"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>
        <activity android:name=".ListNavigationActivity" />
        <activity android:name=".TabNavigationActivity" />
        <activity android:name=".CustomViewActivity" />
        <activity
            android:name=".ThemeActivity"
            android:theme="@style/MyTheme" />
        <activity android:name=".ActionViewActivity" />
    </application>

</manifest>
