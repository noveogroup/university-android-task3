<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.noveogroup.task3" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".RootActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SimpleActionBarActivity"
            android:label="@string/title_activity_simple_action_bar" >
        </activity>
        <activity
            android:name=".ActionBarWithUpButton"
            android:label="@string/title_activity_action_bar_with_up_button"
            android:parentActivityName=".RootActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.noveogroup.task3.RootActivity" />
        </activity>
        <activity
            android:name=".SplitActionBar"
            android:label="@string/title_activity_split_action_bar"
            android:parentActivityName=".RootActivity"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.noveogroup.task3.RootActivity" />
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>
        <activity
            android:name=".ActionBarWithNavigationTabs"
            android:label="@string/title_activity_action_bar_with_navigation_tabs"
            android:parentActivityName=".RootActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.noveogroup.task3.RootActivity" />
        </activity>
    </application>

</manifest>
